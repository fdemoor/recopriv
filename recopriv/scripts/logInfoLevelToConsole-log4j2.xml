<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} %M - %msg%n"/>
    </Console>
  </Appenders>
  
  <Loggers>
    <Logger name="recoPrivResearch.tools.SimilarityDistribution" level="info" additivity="false">
    <!--<Logger name="recoPrivResearch.tools.SimilarityDistribution" level="debug" additivity="false">-->
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="recoPrivResearch.tools.PerfectlySimilarCounterpartsComputer" level="info" additivity="false">
    <!--<Logger name="recoPrivResearch.tools.PerfectlySimilarCounterpartsComputer" level="debug" additivity="false">-->
      <AppenderRef ref="Console"/>
    </Logger>
    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
